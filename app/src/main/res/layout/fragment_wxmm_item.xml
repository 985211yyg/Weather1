<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginBottom="2dp"
    android:clickable="true"
    android:background="@drawable/item_click_bg"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/mm_cover"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/image_margin"
        android:background="@drawable/loading_bg_v" />

    <LinearLayout
        android:id="@+id/mm_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/loading_bg_h"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/mm_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:textAppearance="?attr/textAppearanceListItem"
            tools:text="多变造型不同的吸引， 看衣服的..." />

        <TextView
            android:id="@+id/mm_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:textAppearance="?attr/textAppearanceListItem"
            tools:text="编辑(凹凸曼)" />
    </LinearLayout>

</LinearLayout>
