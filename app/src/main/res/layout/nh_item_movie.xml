<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_4"
    android:background="@android:color/white"
    android:orientation="vertical">

    <TextView
        style="@style/TextAppearance.Design.Snackbar.Message"
        android:id="@+id/movie_type"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_toRightOf="@+id/first_img"
        android:gravity="center_horizontal"
        android:textSize="18sp"
        tools:text="- 电影 -" />

    <TextView
        android:id="@+id/movie_title"
        style="@style/TextAppearance.Design.Snackbar.Message"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dp_4"
        android:textSize="20sp"
        tools:text="怀着极恐的心情细思下去" />

    <TextView
        android:id="@+id/movie_author"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dp_4"
        android:textColor="@android:color/darker_gray"
        android:textSize="14sp"
        tools:text="文/又不电影" />

    <com.example.yungui.weather.widgets.RatioImageView
        android:id="@+id/movie_img"
        android:layout_width="match_parent"
        android:layout_height="187dp"
        android:scaleType="centerCrop"
        android:layout_marginBottom="@dimen/dp_10"
        tools:srcCompat="@mipmap/a1240" />


    <TextView
        android:id="@+id/movie_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/dp_4"
        android:textSize="@dimen/sp_16"
        android:layout_toRightOf="@+id/first_img"
        tools:text="@string/tesxt_test" />

    <TextView
        android:id="@+id/movie_about"
        style="@style/TextAppearance.Design.Snackbar.Message"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="right"
        android:layout_marginLeft="@dimen/dp_4"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="20dp"
        android:textSize="16sp"
        tools:text="---关于《疯城记》" />

    <TextView
        android:id="@+id/movie_time"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dp_4"
        tools:text="2017/7/9" />

</LinearLayout>