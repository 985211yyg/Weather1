<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_4"
        android:text="星期一"
        android:textColor="@android:color/darker_gray"
        android:textSize="@dimen/sp_16" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/dp_4">

            <ImageView
                android:id="@+id/icon_day"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="@dimen/dp_4"
                android:src="@drawable/nh_picture" />

            <TextView
                android:id="@+id/weather_day"
                android:drawableLeft="@drawable/day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_4"
                android:text="雷阵雨"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/dp_4">

            <ImageView
                android:id="@+id/icon_night"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="@dimen/dp_4"
                android:src="@drawable/nh_picture" />

            <TextView
                android:id="@+id/weather_night"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/night"
                android:layout_margin="@dimen/dp_4"
                android:text="雷阵雨"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/dp_4">

            <ImageView
                android:id="@+id/icon_hum"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="@dimen/dp_4"
                android:src="@drawable/hum" />

            <TextView
                android:id="@+id/weather_hum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_4"
                android:text="相对湿度"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/dp_4">

            <ImageView
                android:id="@+id/icon_pop"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="@dimen/dp_4"
                android:src="@drawable/pop" />

            <TextView
                android:id="@+id/weather_pop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_4"
                android:text="降雨概率"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/dp_4">

            <ImageView
                android:id="@+id/icon_sc"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="@dimen/dp_4"
                android:src="@drawable/sc" />

            <TextView
                android:id="@+id/weather_sc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_4"
                android:text="风速"
                android:textColor="@android:color/white" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>